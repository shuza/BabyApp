<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:paddingTop="30dp"
        android:text="@string/wellccome_sms_top"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:paddingTop="10dp"
        android:text="@string/wellcome_sms_middle"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:text="@string/wellcome_sms_buttom"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnLetsSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:paddingBottom="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="20dp"
        android:text="Let's Swipe!"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#2196F3"
        android:padding="15dp"
        android:text="Add-on Pack"
        android:textColor="#FFFFFF" />


</LinearLayout>
